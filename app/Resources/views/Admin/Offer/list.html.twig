{% extends 'Admin/layout.html.twig' %}

{% block content %}
    <div class="row">
        {% for offer in offers %}
            <div class="col-lg-3 col-md-5">
                <div class="card card-product" data-count="6">
                    <div data-header-animation="true">
                        <a href="">
                            <img class="img" src="{{ asset(offer.logo.path|imagine_filter('medium')) }}">
                        </a>
                    </div>

                    <div class="card-content">
                        <div class="card-actions">
                            <legend>{{ offer.name }} </legend>
                            <div style="text-align: center">
                                <a target="_blank" href="{{ path('app_admin_offer_view', {offerId : offer.id}) }}" class="btn btn-default btn-simple"
                                   data-placement="bottom" rel="tooltip" title="" type="button"
                                   data-original-title="Voir">
                                    <i class="material-icons">art_track</i>
                                </a>
                                <a href="{{ path('app_admin_offer_edit', {offerId : offer.id}) }}" class="btn btn-success btn-simple"
                                   data-placement="bottom" rel="tooltip" title="Modifier" type="button"
                                   data-original-title="Modifier">
                                    <i class="material-icons">edit</i>
                                </a>
                                <a class="btn btn-danger btn-simple" data-placement="bottom" rel="tooltip" title=""
                                   type="button" data-original-title="Supprimer" data-toggle="modal"
                                   data-target="#removeOffer{{ offer.id }}">
                                    <i class="material-icons">close</i>
                                </a>
                            </div>
                        </div>
                    </div>
{#                    <div class="card-footer">

                    </div>#}
                </div>
            </div>


            <div class="modal fade" id="removeOffer{{ offer.id }}" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Confirmation !</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Souhaitez-vous supprimer cette offre ?
                        </div>
                        <div class="modal-footer">
                                <a href="{{ path('app_admin_offer_remove', {offerId : offer.id}) }}" class="btn btn-success" aria-label="">Oui</a>
                                <button data-dismiss="modal" type="button" class="btn btn-danger" aria-label="">Non</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}